@page "/customers-all"
@inject HttpClient Http
@using BankBlazor.Client.Models

<h3>Customer Accounts</h3>

@if (customerAccounts == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Full Name</th>
                <th>Account ID</th>
                <th>Balance</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in customerAccounts)
            {
                <tr>
                    <td>@item.FullName</td>
                    <td>@item.AccountId</td>
                    <td>@item.Balance</td>
                </tr>
            }
        </tbody>
    </table>
}
@if (!string.IsNullOrEmpty(loadError))
{
    <div class="alert alert-danger">@loadError</div>
}

@code {
    private List<CustomerAccountAllDto>? customerAccounts;
    private string? loadError;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            var response = await Http.GetFromJsonAsync<PagedResult<CustomerAccountAllDto>>(
                "api/customers/accounts?page=1&pageSize=25");

            if (response?.Items != null)
            {
                customerAccounts = response.Items;
            }
            else
            {
                loadError = "No data returned.";
            }
        }
        catch (Exception ex)
        {
            loadError = $"❌ Failed to load accounts: {ex.Message}";
        }
    }
}
